<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="500dp" android:height="500dp">
        <shape>
            <gradient
                android:angle="89"
                android:startColor="@color/aqua1"
                android:endColor="@color/aqua2"
                android:gradientRadius="300dp"
                android:type="radial"/>

            <stroke android:width="1dp" android:color="@color/aqua2"/>
            <corners android:radius="230dp" />
            <padding
                android:left="120dp" android:right="120dp"/>
        </shape>
    </item>

    <item android:top="220dp" android:bottom="180dp" android:left="-100dp" android:right="-150dp"
        android:width="300dp" android:height="50dp">
        <rotate android:fromDegrees="-65">
            <shape android:shape="rectangle" android:tint="@color/ui_dark_element">
                <corners android:radius="10dp"/>
            </shape>
        </rotate>
    </item>

    <item android:top="200dp" android:bottom="180dp" android:left="30dp" android:right="-150dp"
        android:width="300dp" android:height="65dp">
        <rotate android:fromDegrees="88">
            <shape android:shape="rectangle" android:tint="@color/ui_dark_element">
                <corners android:radius="10dp"/>
            </shape>
        </rotate>
    </item>



    <item android:top="200dp" android:bottom="180dp" android:left="50dp" android:right="-150dp"
        android:width="180dp" android:height="65dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle" android:tint="@color/ui_dark_element">
                <corners android:radius="10dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>